@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<main class="mt-3">
    <h1 class="text-center text-panda">Register</h1>
    <hr class="bg-panda w-50 hr-2" />
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mx-auto w-50">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Username"></label>
            <input asp-for="Input.Username" class="form-control text-panda" placeholder="Username..."/>
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control text-panda" placeholder="Password..."/>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control text-panda" placeholder="ConfirmPassword..."/>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control text-panda" placeholder="Email..."/>
            <span asp-validation-for="Input.Email" class="text-danger" ></span>
        </div>
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Register</button>
        </div>
    </form>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
