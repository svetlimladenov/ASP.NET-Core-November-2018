@model Eventures.ViewModels.EventsBindingModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="mx-auto w-50 text-center">
        <section>
            <h3>Register</h3>
            <form asp-action="Create" class="mx-auto" method="post">
                <div asp-validation-summary="All"></div>
                <hr class="hr-2 bg-eventures"/>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Name" class="font-weight-bold"></label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Name..."/>
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Place" class="font-weight-bold"></label>
                        <input asp-for="@Model.Place" class="form-control" placeholder="Place..."/>
                        <span asp-validation-for="@Model.Place" class="text-danger"></span>
                    </div>
                </div>
                <hr class="hr-2 bg-eventures"/>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Start" class="font-weight-bold"></label>
                        <input asp-for="@Model.Start" class="form-control" placeholder="Start date..."/>
                        <span asp-validation-for="@Model.Start" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.End" class="font-weight-bold"></label>
                        <input asp-for="@Model.End" class="form-control" placeholder="End date..."/>
                        <span asp-validation-for="@Model.End" class="text-danger"></span>
                    </div>
                </div>
                <hr class="hr-2 bg-eventures"/>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.TotalTickets" class="font-weight-bold"></label>
                        <input asp-for="@Model.TotalTickets" class="form-control" placeholder="Total Tickets..."/>
                        <span asp-validation-for="@Model.TotalTickets" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.PricePerTicket" class="font-weight-bold"></label>
                        <input asp-for="@Model.PricePerTicket" class="form-control" placeholder="Price Per Ticket..."/>
                        <span asp-validation-for="@Model.PricePerTicket" class="text-danger"></span>
                    </div>
                </div>
                <hr class="hr-2 bg-eventures"/>
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Create Event</button>
                </div>
            </form>
        </section>
    </div>
</div>



