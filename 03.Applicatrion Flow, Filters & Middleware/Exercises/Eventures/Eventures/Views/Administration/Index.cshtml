@using Eventures.ViewModels.Administration
@model Eventures.ViewModels.Administration.PromoteDemoteViewModel
@{
    ViewData["Title"] = "Administrations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<div class="mx-auto w-75">
    <h3 class="text-center">Promote</h3>
    <div class="row">
        <table class="table justify-content-center">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Username</th>
                    <th scope="col">Promote</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var counterP = 1;
                }
                @foreach (var user in Model.NonAdminUsers)
                {
                    <tr>
                        <th scope="col">@counterP</th>
                        <th scope="col">@user.Id</th>
                        <th scope="col">@user.Username</th>
                        <th scope="col"><a asp-action="Promote" asp-route-id="@user.Id" class="btn btn-success">Promote</a></th>
                    </tr>
                    counterP++;
                }
            </tbody>
        </table>
    </div>


    <h3 class="text-center justify-content-center">Demote</h3>
    <div class="row">
        <table class="table justify-content-center">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Demote</th>
            </tr>
            </thead>
            <tbody>
            @{
                var counter = 1;
            }
            @foreach (var user in Model.AdminUsers)
            {
                <tr>
                    <th scope="col">@counter</th>
                    <th scope="col">@user.Id</th>
                    <th scope="col">@user.Username</th>
                    <th scope="col"><a asp-action="Demote" asp-route-id="@user.Id" class="btn btn-success">Demote</a></th>
                </tr>
                counter++;
            }
            </tbody>
        </table>
    </div>



</div>