@using Eventures.ViewModels.Administration
@model Eventures.ViewModels.Administration.PromoteDemoteViewModel
@{
    ViewData["Title"] = "Administrations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h3 class="text-center">Promote</h3>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Promote</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.NonAdminUsers)
            {
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@user.Id</th>
                    <th scope="col">@user.Username</th>
                    <th scope="col"><a asp-action="Promote" asp-route-id="@user.Id">Promote</a></th>
                </tr>
            }
        </tbody>
    </table>
</div>


<h3 class="text-center">Demote</h3>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Promote</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.AdminUsers)
            {
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@user.Id</th>
                    <th scope="col">@user.Username</th>
                    <th scope="col"><a asp-action="Demote" asp-route-id="@user.Id">Demote</a></th>
                </tr>
            }
        </tbody>
    </table>
</div>



